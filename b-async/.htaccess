# ============================================
# b-async Website Security Configuration
# Apache Server .htaccess File
# ============================================

# Geri yazma modülü aktifleştir
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # HTTPS zorunlu kılma (eğer uygunsa)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ============================================
# Security Headers
# ============================================

<IfModule mod_headers.c>
    # X-Frame-Options: Clickjacking saldırılarını engelle
    Header set X-Frame-Options "SAMEORIGIN"
    
    # X-Content-Type-Options: MIME sniffing'i engelle
    Header set X-Content-Type-Options "nosniff"
    
    # X-XSS-Protection: XSS saldırılarına karşı koruma
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer-Policy: Referrer bilgisini sınırla
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions-Policy: Tarayıcı özelliklerini kısıtla
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # HSTS: HTTPS kullanımı zorunlu (sadece HTTPS sitelerinde)
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Content-Security-Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.googleapis.com https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-ancestors 'self'"
</IfModule>

# ============================================
# JavaScript & CSS Dosyaları - Security
# ============================================

<FilesMatch "\.js$|\.css$">
    <IfModule mod_headers.c>
        Header set X-Content-Type-Options "nosniff"
        Header set Cache-Control "public, max-age=2592000, immutable"
    </IfModule>
</FilesMatch>

# ============================================
# Source Maps ve Debug Dosyaları - Engelle
# ============================================

<FilesMatch "\.map$">
    Order allow,deny
    Deny from all
    Header set Content-Type "text/plain"
</FilesMatch>

<FilesMatch "\.(bak|backup|old|tmp|swp|swo)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============================================
# Gizli Dosyalara Erişim Engelleme
# ============================================

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# .env dosyasına erişimi engelle
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# Config dosyalarına erişimi engelle
<FilesMatch "\.(env|config|json|sql|xml|yml|yaml)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============================================
# Directory Listing - Kapatma
# ============================================

<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# ============================================
# Compression - Performans
# ============================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Sorun yaşanabilecek tarayıcılar
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# ============================================
# Browser Caching - Expire Headers
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML dosyaları - her zaman kontrol et
    ExpiresByType text/html "access plus 0 seconds"
    
    # CSS - 1 ay
    ExpiresByType text/css "access plus 30 days"
    
    # JavaScript - 1 ay
    ExpiresByType application/javascript "access plus 30 days"
    ExpiresByType application/x-javascript "access plus 30 days"
    
    # Görseller - 1 yıl
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fontlar - 1 yıl
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # Diğer
    ExpiresByType application/json "access plus 30 days"
    ExpiresByType video/mp4 "access plus 1 year"
    
    # Varsayılan
    ExpiresDefault "access plus 2 days"
</IfModule>

# ============================================
# MIME Type Ayarları
# ============================================

<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
    AddEncoding gzip svgz
    AddType image/svg+xml svg svgz
    AddType font/woff2 woff2
    AddEncoding gzip woff2
</IfModule>

# ============================================
# Hata Sayfaları - Minimal Bilgi
# ============================================

# 404 - Bulunamadı
ErrorDocument 404 "<!DOCTYPE html><html><head><title>404</title></head><body><h1>Sayfa Bulunamadı</h1></body></html>"

# 403 - Erişim Yasaklandı
ErrorDocument 403 "<!DOCTYPE html><html><head><title>403</title></head><body><h1>Erişim Yasaklandı</h1></body></html>"

# 500 - Sunucu Hatası
ErrorDocument 500 "<!DOCTYPE html><html><head><title>500</title></head><body><h1>Sunucu Hatası</h1></body></html>"

# ============================================
# PHP Güvenliği (Eğer PHP kullanılıyorsa)
# ============================================

<IfModule mod_php.c>
    php_flag display_errors off
    php_flag log_errors on
    php_value error_log /var/log/php_error.log
    php_flag expose_php off
</IfModule>

# ============================================
# UTF-8 Encoding
# ============================================

<IfModule mod_mime.c>
    AddCharset UTF-8 .html .css .js .xml .json
</IfModule>

# ============================================
# ETags - Devre Dışı Bırak (Tarayıcı Caching)
# ============================================

<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>
